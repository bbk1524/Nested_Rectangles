<?xml version="1.0" encoding="utf-8" ?>
<!--This doesn't seem to be reloaded on re-building Config-->
<box name="Window">
  <!-- -1 means screen boundaries -->
  <position x1="-1" y1="-1" x2="-1" y2="-1" />
  <color r="0" g="0" b="0" a="255" />
  
  <box name="Outer Left">
    <percentage perc_x1=".75f" perc_y1=".0f" perc_x2=".0f" perc_y2=".0f" />
    <color r="100" g="100" b="100" a="100" />
    
    <box name ="Inner Left">
      <offset off_x1="10" off_y1="10" off_x2="10" off_y2="10" />
      <color r="255" g="0" b="255" a="255" />
    </box>
    
  </box>

  <box name ="Bottom">
    <percentage perc_x1="0.0f" perc_y1=".75f" perc_x2 =".25f" perc_y2=".0f" />
    <color r="0" g="0" b="255" a="255" />
  </box>

  <box name="Game">
    <percentage perc_x1="0.0f" perc_y1="0.0f" perc_x2="0.25" perc_y2="0.25" />
    <color r="0" g="255" b="0" a="255" />
  </box>
  
</box>

